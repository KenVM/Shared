
#:import Clock kivy.clock.Clock


<AppScreen>:

    highscore_label: highscore_labelkv
    speed_slider: speed_sliderkv
    # name:"startupscreen"
    FloatLayout:
        MDLabel:
            id: highscore_labelkv
            text: "test score"
            font_size: 15
            size_hint: 0.2, 0.1
            pos_hint: {"x":0.1, "y":0.85}
        MDRectangleFlatButton:
            on_release: Clock.schedule_once(root.start_snake,0.3)
            text: "startup snake V1"
            font_size: 50
            size_hint: 0.8, 0.15
            pos_hint: {"x":0.1, "y":0.6}
        MDRectangleFlatButton:
            on_release: Clock.schedule_once(root.start_test,0.3)
            text: "startup Space Invaders"
            font_size: 50
            size_hint: 0.8, 0.15
            pos_hint: {"x":0.1, "y":0.4}
        MDSlider:
            id: speed_sliderkv
            min:1
            max:10
            value:5
            size_hint: 0.6, 0.1
            pos_hint: {"x":0.2, "y":0.1}
            humb_color_down: app.theme_cls.accent_color


<SnakeScreen>:

    score_label: score_labeliv
    # name:"screen_snake"
    FloatLayout:
        MDLabel:
            id: score_labeliv
            text: "score: "
            font_size: 15
            size_hint: 0.2, 0.1
            pos_hint: {"x":0.1, "y":0.9}
        MDRectangleFlatButton:
            on_release: Clock.schedule_once(root.pause_game,0.3)
            text: "Pause"
            font_size: 22
            size_hint: 0.2, 0.1
            pos_hint: {"x":0.8, "y":0.9}

        MDRectangleFlatButton:
            on_release: Clock.schedule_once(root.quit_game,0.3)
            text: "Quit"
            font_size: 22
            size_hint: 0.2, 0.1
            pos_hint: {"x":0.4, "y":0.9}



<SnakeGame>:
    snakegame_property: snakegamekv

    id: snakegamekv
    # size_hint: 0.9, 0.8
    size_hint: self.size_hint
    pos_hint: self.pos_hint
    canvas:
        Color:
            rgb: 0.9,0.9,0.9
        Rectangle:
            size: self.width, self.height
            pos: self.pos

<Block>:
    canvas:
        Color:
            rgb: self.color
        Rectangle:
            size: self.size
            pos: self.pos
